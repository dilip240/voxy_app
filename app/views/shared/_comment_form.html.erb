<%= form_for([@micropost, @micropost.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= current_user.name %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_field :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
