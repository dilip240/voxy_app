<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
     <div class="index_content loginPage">
	     <div class="post_msg">
		     <div class="pic_section">
			     <div class="browseSection">
				      <%= f.label :Attach_Image %>
			          <div class="clear"></div>
			     </div>
		     </div>
		     <div class="msgSection">

	             <%= f.label :nickname %>
		         <%= f.text_field :nickname %>	     	
                 <%= f.text_area :post, placeholder: "Post here", class:"message_area" %>
	         </div>
	         <div class="submit_postPage">  
  	             <%= f.submit "Submit", class:'log'%>
             </div>
           </div>
      </div>
   </div>        
<% end %>
